        <div class="row">

            <%include left.ejs%>

            <div class="span9">

                <h1 class="page-title">
                    <i class="icon-th-large"></i>
                   文章管理
                </h1>


                <div class="row">

                    <div class="span9">

                        <div class="widget">

                            <div class="widget-header">
                                <h3>新增文章</h3>
                            </div> <!-- /widget-header -->

                            <div class="widget-content">

                                <div class="tabbable">
                                    <div class="tab-content">

                                            <form action="/artical" method="post" enctype="multipart/form-data" id="edit-profile" class="form-horizontal" />
                                            <fieldset>
                                                <input type="hidden" name="author" value="<%-locals.login%>"/>
                                                <div class="control-group">
                                                    <label class="control-label" for="username">文章主题：</label>
                                                    <div class="controls">
                                                        <input type="text" class="input-medium disabled" name="title"/>
                                                    </div> <!-- /controls -->
                                                </div> <!-- /control-group -->

                                                <div class="control-group">
                                                    <label class="control-label" for="firstname">文章标签：</label>
                                                    <div class="controls">
                                                        <%if(tagdata != null){%>
                                                             <%for(var i = 0;i<tagdata.length;i++){%>
                                                                 <input type="checkbox" name="tag" value="<%=tagdata[i]['tagname']%>"/> <%=tagdata[i]['tagname']%>
                                                             <%}%>
                                                        <%}%>
                                                        </div> <!-- /controls -->
                                                </div> <!-- /control-group -->

                                                <div class="control-group">
                                                    <label class="control-label" for="lastname">文章插图：</label>
                                                    <div class="controls">
                                                        <input type="file" class="photo" name="imgTo"/>
                                                    </div> <!-- /controls -->
                                                </div> <!-- /control-group -->
                                                <div class="control-group">
                                                    <label class="control-label" for="email">正文：</label>
                                                    <div class="controls">
                                                        <script id="editor" class="content" type="text/plain" style="width:450px;height:400px;"></script>
                                                    </div> <!-- /controls -->
                                                </div> <!-- /control-group -->
                                                <br /><br />
                                                <div class="form-actions">
                                                    <button type="submit" class="btn btn-primary" id="sub">保存</button>
                                                    <button class="btn" type="reset">取消</button>
                                                </div> <!-- /form-actions -->
                                            </fieldset>
                                            </form>

                                    </div>


                                </div>

                            </div> <!-- /widget-content -->

                        </div> <!-- /widget -->

